<%- include('./partials/header') %>
<%- include('./partials/navbar') %>

<head>

    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <h1>Recipe List</h1>

    <% if (Object.keys(categorizedRecipes).length > 0) { %>
        <% for (let category in categorizedRecipes) { %>
            <h4 class="header4"><%= category %></h4>
            <table border="1">
                <tr>
                    <th>Recipe Name</th>
                    <th>Prep Time (mins)</th>
                    <th>Cook Time (mins)</th>
                </tr>
                <% categorizedRecipes[category].forEach(recipe => { %>
                    <tr>
                        <td><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></td>
                        <td><%= recipe.prep_time %></td>
                        <td><%= recipe.cook_time %></td>
                    </tr>
                <% }) %>
            </table>
        <% } %>
    <% } else { %>
        <p>No recipes found.</p>
    <% } %>

</body>
</html>
